{
  "name": "Firebrand",
  "version": "0.1.0",
  "author": "Zack Brand",
  "description": "Firebrand Testbase",
  "dependencies": {
    "light-server": "latest",
    "watch": "latest",
    "concurrently": "latest",
    "node-sass": "latest",
    "uglify-js": "latest"
  },
  "scripts": {
    "watch:scss": "watch \"node-sass src/scss/master.scss public/css/main.css\" src/scss",
    "watch:js": "watch \"uglifyjs src/js/*.js -o public/js/min.js\" src/js",
    "serve": "light-server -s ./public -p 7000 -w \"./public/** # echo reloaded\" ",
    "start": "concurrently  \"npm run serve\" \"npm run watch:scss\" \"npm run watch:js\""
  },
  "license": "UNLICENSED",
  "private": "true"
}
