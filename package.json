{
  "name": "Firebrand",
  "version": "0.1.0",
  "author": "Zack Brand",
  "description": "Firebrand Testbase",
  "devDependencies": {
    "concurrently": "latest",
    "watch": "latest",
    "node-sass": "latest",
    "uglify-js": "latest",
    "light-server": "latest",
    "imagemin-cli": "latest",
    "html-minifier": "latest"
  },
  "scripts": {
    "watch:scss": "watch \"node-sass --output-style compressed src/scss/master.scss public/css/min.css\" src/scss --interval=0.1",
    "watch:js": "watch \"uglifyjs src/js/*.js -o public/js/min.js\" src/js --interval=0.1",
    "watch:img": "watch \"imagemin ./src/images/* --out-dir=./public/images\" src/images --interval=1",
    "watch:html": "watch \"html-minifier --collapse-whitespace --conservative-collapse --input-dir ./src/html/ --output-dir ./public\" src/html --interval=0.1",
    "hh": " html-minifier --help",
    "serve": "light-server -s ./public -p 7000 -w \"./public/** # echo reloaded\" --interval 100",
    "start": "concurrently  \"npm run serve\" \"npm run watch:scss\" \"npm run watch:js\" \"npm run watch:img\" \"npm run watch:html\""
  },
  "license": "UNLICENSED",
  "private": "true"
}
 